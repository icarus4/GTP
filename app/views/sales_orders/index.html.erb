<div class="row">
  <div class="pull-right m-r">
    <%= link_to "新增銷貨單", new_sales_order_path, class: 'btn btn-default btn-md' %>
  </div>
</div>

<div class="row table-container">
  <table class="table table-hover tr-link">
    <thead>
      <tr>
        <th>單號</th>
        <th>公司名稱</th>
        <th>狀態</th>
        <th>出貨</th>
        <th>總計</th>
        <th>建立於</th>
        <th>更新於</th>
      </tr>
    </thead>
    <tbody>
    <% @sales_orders.each do |order| %>
      <tr data-link="<%= sales_order_path(order) %>">
        <td><%= order.order_number %></td>
        <td><%= order.partner.name %></td>
        <td><%= render_status(order.status) %></td>
        <td><%= order.shipment_status %></td>
        <td><%= order.total_amount %></td>
        <td><%= order.issued_on %></td>
        <td><%= order.updated_at.to_date %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
