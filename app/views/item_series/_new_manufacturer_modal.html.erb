<div class="modal inmodal" id="new-manufacturer-modal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content animated fadeIn">
      <div class="modal-header">
        <!-- <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <i class="fa fa-clock-o modal-icon"></i> -->
        <h4 class="modal-title">新增製造商</h4>
      </div>

      <div class="modal-body">
        <div class="form-horizontal">

          <div class="form-group">
            <label class="col-md-3 control-label">* 名稱</label>
            <div class="col-md-9">
              <input type="text" class="form-control" v-model="new_manufacturer.name" placeholder="輸入製造商名稱">
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-3 control-label">* 製造商所在地</label>
            <div class="col-md-9">
              <div class="radio">
                <label>
                  <input type="radio" v-model="new_manufacturer.location_type" value="domestic" :checked="new_manufacturer.location_type === 'domestic'">
                  國內
                </label>
              </div>
              <div class="radio">
                <label>
                  <input type="radio" v-model="new_manufacturer.location_type" value="foreign"  :checked="new_manufacturer.location_type === 'foreign'">
                  國外
                </label>
              </div>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-3 control-label">製造商登錄字號</label>
            <div class="col-md-9">
              <input type="text" class="form-control" v-model="new_manufacturer.registration_number" placeholder="輸入製造商登錄字號">
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-3 control-label">地址</label>
            <div class="col-md-9">
              <input type="text" class="form-control" v-model="new_manufacturer.address" placeholder="輸入廠商地址">
            </div>
          </div>

        </div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-white" data-dismiss="modal">取消</button>
        <button type="button" class="btn btn-primary" v-on:click="createManufacturer">新增</button>
      </div>
    </div>
  </div>
</div>
