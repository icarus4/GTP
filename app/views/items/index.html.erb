<div class="row">
  <%= link_to "新增貨品", new_item_path, class: 'btn btn-default btn-md' %>
</div>

<div class="row table-container">
  <table class="table table-hover tr-link">
    <thead>
      <tr>
        <th>圖片</th>
        <th>貨品名稱</th>
        <th>製造商</th>
        <th>品牌</th>
        <th>庫存量</th>
        <th>倉庫現有數量</th>
        <th>狀態</th>
        <th>上次更新</th>
      </tr>
    </thead>
    <tbody>
    <% @items.each do |item| %>
      <tr data-link="<%= item_path(item) %>">
        <td><%= image_tag(item.image.thumb, size: '32x32') if item.image.present? %></td>
        <td><%= item.name %></td>
        <td><%= item.manufacturer.name %></td>
        <td><%= item.brand.name %></td>
        <td><%= item.available_count %></td>
        <td><%= item.on_hand_count %></td>
        <td><%= item.status.humanize %></td>
        <td><%= time_ago_in_words(item.updated_at) %> ago</td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
