<div class="row">
  <%= link_to "新增客戶/供應商", new_partner_path, class: 'btn btn-default btn-md' %>
</div>

<div class="row table-container">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>公司名稱</th>
        <th>公司類型</th>
        <th>Email</th>
        <th>聯絡電話</th>
        <th>狀態</th>
      </tr>
    </thead>
    <tbody>
    <% @partners.each do |partner| %>
      <tr>
        <td><%= partner.name %></td>
        <td>
          <ul class="list-unstyled">
          <% partner.roles.each do |role| %>
            <li><%= role.name %></li>
          <% end %>
          </ul>
        </td>
        <td><%= partner.email %></td>
        <td><%= partner.phone %></td>
        <td><%= partner.status %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
